{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "postRequest",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "properties": {
      "type": "object",
      "properties": {
        "age": {
          "type": "number"
        },
        "active": {
          "type": "boolean"
        },
        "date_of_birth": {
          "type": "string"
        }
      }
    }
  },
  "required": ["id", "first_name", "last_name"]
}